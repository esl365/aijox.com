# ============================================
# CORE APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# DATABASE (Neon PostgreSQL + pgvector)
# ============================================
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/neondb?sslmode=require
DIRECT_URL=postgresql://user:password@your-neon-host.neon.tech/neondb?sslmode=require

# ============================================
# AI SERVICES
# ============================================

# OpenAI (Agent 1: Video Analysis + Agent 2: Embeddings)
OPENAI_API_KEY=sk-proj-REPLACE_WITH_YOUR_OPENAI_KEY

# Anthropic (Agent 2: Email Generation)
ANTHROPIC_API_KEY=sk-ant-REPLACE_WITH_YOUR_ANTHROPIC_KEY

# ============================================
# FILE STORAGE
# ============================================

# Cloudflare R2 (Video Storage)
R2_ACCOUNT_ID=REPLACE_WITH_YOUR_ACCOUNT_ID
R2_ACCESS_KEY_ID=REPLACE_WITH_YOUR_ACCESS_KEY
R2_SECRET_ACCESS_KEY=REPLACE_WITH_YOUR_SECRET_KEY
R2_BUCKET_NAME=educator-nexus-videos
R2_PUBLIC_URL=https://videos.yourdomain.com

# UploadThing (Upload Handler)
UPLOADTHING_SECRET=REPLACE_WITH_YOUR_UPLOADTHING_SECRET
UPLOADTHING_APP_ID=REPLACE_WITH_YOUR_APP_ID

# ============================================
# EMAIL DELIVERY
# ============================================

# Resend (Agent 2: Email Notifications)
RESEND_API_KEY=REPLACE_WITH_YOUR_RESEND_KEY
FROM_EMAIL=jobs@yourdomain.com

# ============================================
# AUTHENTICATION
# ============================================

# Auth.js v5
NEXTAUTH_SECRET=GENERATE_WITH_openssl_rand_-base64_32_MIN_32_CHARS
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=REPLACE_WITH_YOUR_GOOGLE_SECRET
LINKEDIN_CLIENT_ID=REPLACE_WITH_YOUR_LINKEDIN_ID
LINKEDIN_CLIENT_SECRET=REPLACE_WITH_YOUR_LINKEDIN_SECRET

# ============================================
# CACHE & RATE LIMITING (Upstash Redis)
# ============================================
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=REPLACE_WITH_YOUR_UPSTASH_TOKEN

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
NEXT_PUBLIC_ENABLE_VIDEO_RESUME=true
NEXT_PUBLIC_ENABLE_AI_MATCHING=true
NEXT_PUBLIC_ENABLE_ANONYMOUS_JOBS=true

# ============================================
# SETUP INSTRUCTIONS
# ============================================
# 1. Copy this file: cp .env.example .env.local
# 2. Replace all REPLACE_WITH_YOUR_* values
# 3. Generate NEXTAUTH_SECRET: openssl rand -base64 32
# 4. Setup Neon DB and enable pgvector: CREATE EXTENSION IF NOT EXISTS vector;
# 5. Run: npx prisma generate && npx prisma migrate dev
# 6. Run: npm run dev
