# ============================================================================
# Global Educator Nexus - Environment Variables
# ============================================================================

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://username:password@host/dbname?pgbouncer=true&connection_limit=1"
DIRECT_URL="postgresql://username:password@host/dbname" # For migrations

# ============================================================================
# AUTHENTICATION (Auth.js v5)
# ============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# OAuth Providers
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

LINKEDIN_CLIENT_ID="your_linkedin_client_id"
LINKEDIN_CLIENT_SECRET="your_linkedin_client_secret"

# ============================================================================
# AI MODELS
# ============================================================================
# OpenAI (GPT-4o for video analysis, text-embedding-3-small for vectors)
OPENAI_API_KEY="sk-your_openai_key_here"

# Anthropic (Claude 3.5 Sonnet for text generation)
ANTHROPIC_API_KEY="sk-ant-your_anthropic_key_here"

# ============================================================================
# STORAGE (Cloudflare R2 + UploadThing)
# ============================================================================
# Cloudflare R2 (S3-compatible)
R2_ACCOUNT_ID="your_cloudflare_account_id"
R2_ACCESS_KEY_ID="your_r2_access_key"
R2_SECRET_ACCESS_KEY="your_r2_secret_key"
R2_BUCKET_NAME="educator-nexus-media"
R2_PUBLIC_URL="https://media.yourdomain.com"

# UploadThing (for easy file uploads)
UPLOADTHING_SECRET="sk_live_your_uploadthing_secret"
UPLOADTHING_APP_ID="your_app_id"

# ============================================================================
# EMAIL (Resend)
# ============================================================================
RESEND_API_KEY="re_your_resend_api_key"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your_analytics_id"
SENTRY_DSN="your_sentry_dsn"

# ============================================================================
# SPARC Framework (for development)
# ============================================================================
# Optional: Expert knowledge configuration
EXPERT_PROVIDER=openai
EXPERT_MODEL=o1-preview

# Optional: Default provider settings
DEFAULT_PROVIDER=anthropic
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Optional: Development settings
DEBUG=false
COWBOY_MODE=false # Skip command approval prompts (USE WITH CAUTION!)

# ============================================================================
# FEATURE FLAGS
# ============================================================================
NEXT_PUBLIC_ENABLE_VIDEO_RESUME=true
NEXT_PUBLIC_ENABLE_AI_MATCHING=true
NEXT_PUBLIC_ENABLE_ANONYMOUS_JOBS=true
