generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  extensions = [vector]
}

// Auth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Core User Model
enum UserRole {
  ADMIN
  TEACHER
  RECRUITER
  SCHOOL
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          UserRole  @default(TEACHER)

  // Verification
  verificationToken       String?
  verificationTokenExpiry DateTime?

  // Consent & Privacy
  consentRequired    Boolean   @default(true)
  consentMarketing   Boolean   @default(false)
  consentThirdParty  Boolean   @default(false)
  consentDate        DateTime?

  // Profile
  profileCompleteness Int @default(0)

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  // Status
  status          UserStatus @default(ACTIVE)
  statusReason    String?
  statusUpdatedAt DateTime?

  // Password Reset
  passwordResetToken       String?
  passwordResetTokenExpiry DateTime?

  // Additional Fields
  lastEmailNotificationAt DateTime?
  lastSeenAt              DateTime?
  availableStartDate      DateTime?
  jobSearchStatus         String?
  phoneNumber             String?

  accounts         Account[]
  sessions         Session[]
  teacherProfile   TeacherProfile?
  recruiterProfile RecruiterProfile?
  schoolProfile    SchoolProfile?
  aiUsage          AIUsage[]
  interviews       Interview[]
}

// Teacher Profile (The Asset)
model TeacherProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Basic Information
  firstName String
  lastName  String
  phone     String?
  bio       String?   @db.Text

  // Location
  currentCountry      String?
  preferredCountries  String[]

  // Experience & Education
  yearsExperience     Int      @default(0)
  subjects            String[]
  degreeLevel         String?  // BA, BS, MA, MS, PhD
  degreeMajor         String?
  certifications      String[]
  hasTeachingLicense  Boolean  @default(false)
  hasTEFL             Boolean  @default(false)

  // Visa & Legal
  citizenship         String?
  criminalRecord      String?  @default("clean") // clean, minor, felony
  hasApostille        Boolean  @default(false)
  hasHealthCertificate Boolean @default(false)
  age                 Int?

  // Video Resume (Agent 1: AI Screener)
  videoUrl            String?
  videoKey            String?
  videoUploadedAt     DateTime?
  videoAnalysis       Json?    // AI analysis results
  videoAnalysisStatus String?  @default("PENDING") // PENDING, ANALYZING, COMPLETED, FAILED
  videoAnalysisError  String?
  lastAnalyzedAt      DateTime?

  // Embeddings (Agent 2: Autonomous Headhunter)
  embedding           Unsupported("vector(1536)")?

  // Visa Status (Agent 3: Visa Guard)
  visaStatus          Json?    // Cached eligibility by country
  visaLastCheckedAt   DateTime?

  // Profile Completeness & Search
  profileCompleteness Int      @default(0) // 0-100
  searchRank          String?  @default("LOW") // HIGH, MEDIUM, LOW
  status              String   @default("ACTIVE") // ACTIVE, INACTIVE, SUSPENDED

  // Preferences
  minSalaryUSD        Int?
  maxSalaryUSD        Int?
  availableFrom       DateTime?

  // Relations
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  applications        Application[]
  documents           Document[]
  matchNotifications  MatchNotification[]
  savedSearches       SavedSearch[]

  @@index([status, profileCompleteness])
  @@index([searchRank])
}

// Saved Searches & Job Alerts (Phase 2)
model SavedSearch {
  id        String   @id @default(cuid())
  teacherId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Search criteria (stored as JSON)
  name      String?  // Optional name for the search (e.g., "Seoul ESL Jobs")
  filters   Json     // { country: "South Korea", subject: "ESL", minSalary: 2000, etc. }

  // Alert settings
  alertEmail     Boolean @default(true)  // Send email notifications
  alertFrequency String  @default("DAILY") // INSTANT, DAILY, WEEKLY, NEVER
  isActive       Boolean @default(true)   // Can be paused

  // Tracking
  lastAlertSent  DateTime?
  lastMatchCount Int      @default(0)     // Number of jobs in last alert

  // Relations
  teacher TeacherProfile @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  @@index([teacherId, isActive])
  @@index([alertFrequency, isActive])
  @@index([lastAlertSent])
}

// School/Organization Profile
model SchoolProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  schoolName  String
  country     String
  city        String
  schoolType  String?  // International, Public, Private, Language Center
  description String?  @db.Text
  website     String?

  // Verification
  isVerified        Boolean   @default(false)
  verifiedAt        DateTime?
  verifiedBy        String?   // Admin user ID who verified
  verificationNotes String?   @db.Text

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobPostings JobPosting[]
  reviews     Review[]
  alerts      Alert[]
  activities  Activity[]
}

// Recruiter Profile
model RecruiterProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  companyName String?
  country     String?

  // Verification
  isVerified        Boolean   @default(false)
  verifiedAt        DateTime?
  verifiedBy        String?   // Admin user ID who verified
  verificationNotes String?   @db.Text

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobPostings JobPosting[]
}

// Job Posting (The Bait)
model JobPosting {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Basic Info
  title       String
  description String   @db.Text
  subject     String

  // Location
  country     String
  city        String

  // School Info
  schoolId    String?
  recruiterId String?
  schoolName  String
  isAnonymous Boolean  @default(false)
  hiddenOrgName String? // Admin-only field for anonymous postings

  // Requirements
  minYearsExperience Int?
  requiredSubjects   String[]
  requirements       String?  @db.Text

  // Compensation
  salaryUSD          Int
  currency           String?
  benefits           String?  @db.Text
  housingProvided    Boolean  @default(false)
  flightProvided     Boolean  @default(false)

  // Contract
  contractLength     Int?     // months
  startDate          DateTime?

  // Google for Jobs Schema (SEO)
  expiresAt              DateTime? // Job posting expiration date
  employmentType         String?   @default("FULL_TIME") // FULL_TIME, PART_TIME, CONTRACT, TEMPORARY, INTERN
  educationRequirements  String?   @db.Text // e.g., "Bachelor's degree in Education or related field"
  experienceRequirements String?   @db.Text // Detailed experience requirements (supplements requirements field)
  applicationUrl         String?   // Custom application URL (defaults to platform URL)

  // Hybrid Job Posting (AI-assisted creation)
  fullDescriptionHtml    String?   @db.Text // Original rich text with formatting (for job detail page)
  rawJobPosting          String?   @db.Text // Original pasted text (backup/source of truth)
  aiExtractionScore      Float?    // 0.0-1.0 confidence score of AI extraction
  aiExtractionErrors     String[]  // Fields that AI couldn't extract with confidence
  requiresReview         Boolean   @default(false) // Flag for manual admin review
  externalApplicationUrl String?   // External application URL (Google Forms, university website, etc.)
  applicationInstructions String?  @db.Text // Custom application instructions/steps

  // Embeddings (Agent 2)
  embedding          Unsupported("vector(1536)")?

  // Matching Stats
  matchNotificationsSent Int      @default(0)
  lastMatchedAt          DateTime?

  // Status
  status      String   @default("ACTIVE") // ACTIVE, CLOSED, FILLED

  // Relations
  school      SchoolProfile?    @relation(fields: [schoolId], references: [id])
  recruiter   RecruiterProfile? @relation(fields: [recruiterId], references: [id])
  applications Application[]
  matchNotifications MatchNotification[]
  reviews     Review[]

  @@index([status, country])
  @@index([subject])
}

// Application (The Funnel)
enum ApplicationStatus {
  NEW
  SCREENING
  INTERVIEW
  OFFER
  HIRED
  REJECTED
}

model Application {
  id        String            @id @default(cuid())
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  jobId       String
  teacherId   String

  status      ApplicationStatus @default(NEW)

  // AI Matching
  aiMatchScore       Int?  // 0-100 at time of application

  // Cover Letter
  coverLetter        String? @db.Text

  // Timeline
  viewedAt           DateTime?
  screenedAt         DateTime?
  interviewedAt      DateTime?
  offeredAt          DateTime?
  hiredAt            DateTime?
  rejectedAt         DateTime?
  rejectReason       String?

  // Relations
  job     JobPosting     @relation(fields: [jobId], references: [id], onDelete: Cascade)
  teacher TeacherProfile @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  interviews Interview[]

  @@unique([jobId, teacherId])
  @@index([status])
}

// Match Notification (Agent 2 tracking)
model MatchNotification {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  jobId     String
  teacherId String

  matchScore    Decimal  @db.Decimal(5, 2) // 0.00-1.00
  matchQuality  String?  // EXCELLENT, GREAT, GOOD, FAIR

  sentAt        DateTime?
  status        String   @default("QUEUED") // QUEUED, SENT, FAILED

  clickedAt     DateTime?
  appliedAt     DateTime?

  // Relations
  job     JobPosting     @relation(fields: [jobId], references: [id], onDelete: Cascade)
  teacher TeacherProfile @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@index([teacherId])
  @@index([sentAt])
}

// Document Storage
enum DocumentType {
  IMAGE
  PDF
  VIDEO
}

model Document {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())

  profileId String

  type      DocumentType
  url       String
  key       String       // R2 or UploadThing key
  name      String
  size      Int

  teacher   TeacherProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
}

// AI Usage Tracking (Phase 5-3.2)
model AIUsage {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  operation String   // "video-analysis", "embedding", "email-generation"
  provider  String   // "openai", "anthropic"
  model     String   // "gpt-4o", "claude-3-5-sonnet"

  tokensUsed Int
  costUSD    Float
  metadata   Json?

  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([operation])
}

// Reviews & Ratings (Month 3)
enum ReviewType {
  JOB_REVIEW        // Teacher reviews a job/school they worked for
  SCHOOL_REVIEW     // Teacher reviews a school (not job-specific)
}

enum ReviewStatus {
  PENDING           // Awaiting moderation
  APPROVED          // Approved and visible
  REJECTED          // Rejected by moderator
  FLAGGED           // Flagged for review
}

model Review {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Review metadata
  reviewType ReviewType
  status     ReviewStatus @default(PENDING)

  // Author (teacher who wrote the review)
  authorId   String
  authorName String?  // Snapshot of name at time of review

  // Target (what is being reviewed)
  jobId      String?
  schoolId   String?

  // Content
  rating     Int      // 1-5 stars
  title      String?
  comment    String   @db.Text

  // Verification
  isVerified Boolean  @default(false) // Verified actual employment
  workPeriod String?  // e.g., "2022-2023" or "6 months"

  // Helpful votes
  helpfulCount    Int @default(0)
  notHelpfulCount Int @default(0)

  // Moderation
  moderatedAt    DateTime?
  moderatedBy    String?
  moderatorNotes String?  @db.Text

  // Relations
  job    JobPosting?    @relation(fields: [jobId], references: [id], onDelete: Cascade)
  school SchoolProfile? @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  @@index([status, createdAt])
  @@index([jobId])
  @@index([schoolId])
  @@index([authorId])
  @@index([rating])
}

// AI Job Extraction Cache (Phase 3)
model AIExtractionCache {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Source text hash for deduplication
  textHash String @unique // SHA-256 hash of rawJobPosting

  // Cached extraction result
  extractedData      Json   // Full extracted fields
  confidenceScore    Float  // 0.0-1.0
  warnings           String[] // Extraction warnings
  extractionModel    String @default("gpt-4o") // Model used

  // Usage tracking
  hitCount   Int @default(1) // Number of times this cache was used
  lastUsedAt DateTime @default(now())

  @@index([textHash])
  @@index([lastUsedAt])
}

// Dashboard Enhancement Models (P0 Features)

// Smart Alerts for Schools
enum AlertType {
  URGENT
  TODAY
  THIS_WEEK
  INFO
}

enum AlertCategory {
  APPLICATION
  INTERVIEW
  JOB
  DEADLINE
  SYSTEM
}

model Alert {
  id          String   @id @default(cuid())
  schoolId    String
  school      SchoolProfile @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  type        AlertType
  category    AlertCategory
  title       String
  description String   @db.Text
  actionLabel String?
  actionHref  String?

  read        Boolean  @default(false)
  createdAt   DateTime @default(now())

  // Optional relations
  jobId         String?
  applicationId String?

  @@index([schoolId, read, createdAt])
  @@index([type])
  @@index([category])
}

// Activity Feed for Real-time Updates
enum ActivityType {
  APPLICATION_RECEIVED
  APPLICATION_APPROVED
  APPLICATION_REJECTED
  APPLICATION_SHORTLISTED
  MESSAGE_SENT
  INTERVIEW_SCHEDULED
  INTERVIEW_COMPLETED
  JOB_POSTED
  JOB_UPDATED
  JOB_EXPIRED
  CANDIDATE_HIRED
}

model Activity {
  id          String   @id @default(cuid())
  schoolId    String
  school      SchoolProfile @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  type        ActivityType
  title       String
  description String   @db.Text
  metadata    Json?

  // Optional relations
  jobId         String?
  applicationId String?
  userId        String?

  createdAt   DateTime @default(now())

  @@index([schoolId, createdAt])
  @@index([type])
}

// Interview Scheduling
enum InterviewStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  RESCHEDULED
  NO_SHOW
}

enum InterviewType {
  PHONE
  VIDEO
  IN_PERSON
  ASSESSMENT
}

model Interview {
  id            String   @id @default(cuid())
  applicationId String
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  scheduledAt   DateTime
  duration      Int      @default(60) // minutes

  type          InterviewType
  status        InterviewStatus @default(SCHEDULED)

  // Meeting details
  meetingLink   String?
  meetingNotes  String?  @db.Text
  location      String?

  // Interviewer
  interviewerId String?
  interviewer   User?    @relation(fields: [interviewerId], references: [id])

  // Outcome
  completedAt   DateTime?
  rating        Int?     // 1-5
  feedback      String?  @db.Text
  decision      String?  // PROCEED, REJECT, MAYBE

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([applicationId])
  @@index([scheduledAt])
  @@index([status])
  @@index([interviewerId])
}
